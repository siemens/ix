  "bugs": "https://github.com/siemens/ix/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/siemens/ix",
    "directory": "packages/aggrid"
  },
  "description": "AG Grid theme based on ix theme variables",
  "version": "3.0.2",
  "files": [
