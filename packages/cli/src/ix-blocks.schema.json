{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Siemens ix Blocks Configuration",
  "description": "Configuration file for ix blocks CLI",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },
    "targetFolder": {
      "type": "string",
      "description": "Target folder where blocks will be installed",
      "default": "src/blocks"
    },
    "blocks": {
      "type": "array",
      "description": "List of installed blocks",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Block name"
          },
          "version": {
            "type": "string",
            "description": "Block version"
          }
        },
        "required": ["name", "version"],
        "additionalProperties": false
      },
      "default": []
    }
  },
  "required": ["targetFolder", "blocks"],
  "additionalProperties": false
}
