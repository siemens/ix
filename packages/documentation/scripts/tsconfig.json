{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ES2022"],
    "noEmit": true,
    "noImplicitAny": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./../*"]
    },
    "resolveJsonModule": true,
    "preserveSymlinks": true
  },
  "include": ["./**/*.ts", "./**/*.tsx", "scripts/generate-version.mjs"],
  "exclude": ["static/code-runtime"]
}
