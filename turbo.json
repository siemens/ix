{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["CI", "FIGMA_API_TOKEN", "GITHUB_TOKEN", "CSC"],
  "ui": "stream",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "components/**",
        "dist/**",
        "dist-css/**",
        "build/**",
        "www/**",
        "loader/**",
        "component-doc.json",
        "components/**",
        "src/preview-examples/styles"
      ],
      "outputLogs": "new-only"
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": true,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "visual-regression": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
