{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "CI",
    "FIGMA_API_TOKEN",
    "GITHUB_TOKEN",
    "CSC",
    "FAST_START"
  ],
  "globalDependencies": [
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "components/**",
        "dist/**",
        "dist-css/**",
        "build/**",
        "www/**",
        "loader/**",
        "component-doc.json",
        "components/**"
      ],
      "outputLogs": "new-only"
    },
    "start": {
      "dependsOn": [
        "^build"
      ],
      "cache": true,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "visual-regression": {
      "dependsOn": [
        "build"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    }
  }
}
